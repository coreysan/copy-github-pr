{
  "manifest_version": 3,
  "name": "Share Pull Request",
  "version": "1.3",
  "description": "Adds a button to GitHub PR pages to copy PR details.",
  "permissions": ["clipboardWrite"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pull/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
